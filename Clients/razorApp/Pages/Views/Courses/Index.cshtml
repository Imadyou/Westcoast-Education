@page
@model razorApp.Pages.Views.Courses.Index
@{
    ViewData["Title"] = "Vår Kurser";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-page="/Views/Courses/Create">Lägg till</a>
</p>
<table class="table table-bordered ">
    <thead class="thead-dark" >
        <tr>
            <th>
               Kurs nummer
            </th>
            <th>
                Kurse Title
            </th>
            <th>
             Kategori
            </th>
            <th>
              Kurs Längd
            </th>
            <th>
               Beskrivning
            </th>
            <th>
                Detaljer
            </th>
          
        </tr>
    </thead>
    <tbody>
@foreach (var course in Model.Courses!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => course.Id)
            </td>
            <td>
                @Html.DisplayFor(modelcourse => course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelcourse => course.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelcourse => course.CourseDuration)
            </td>
            <td>
                @Html.DisplayFor(modelcourse => course.Description)
            </td>
            <td>
                @Html.DisplayFor(modelcourse => course.Details)
            </td>
             <td>
                <a class="btn btn-primary" asp-Page="Edit" asp-route-id="@course.Id"> Ändra</a> |
                <a class="btn btn-danger" asp-page="Index" onclick="return confirm('Är du säkert att du vill ta bort kursen?');" asp-page-handler="Delete" asp-route-id="@course.Id"  >Ta Bort </a> 
            </td>
        </tr>
}
    </tbody>
</table>

