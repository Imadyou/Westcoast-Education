@page "{id:int}"
@model razorApp.Pages.Views.Teachers.Edit
@{
    ViewData["Title"] = "Redigera";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div  class="col-md-5, shadow p-3 mb-5 bg-white rounded">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Teacher.FirstName" class="control-label"></label>
                <input asp-for="Teacher.FirstName" class="form-control" />
                <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.LastName" class="control-label"></label>
                <input asp-for="Teacher.LastName" class="form-control" />
                <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Email" class="control-label"></label>
                <input asp-for="Teacher.Email" class="form-control" />
                <span asp-validation-for="Teacher.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.PhoneNumber" class="control-label"placeholder="12-345-67-89" pattern="[0-9]{2}-[0-9]{3}-[0-9]{2}-[0-9]{2}"></label>
                <input asp-for="Teacher.PhoneNumber" class="form-control" />
                <span asp-validation-for="Teacher.PhoneNumber!" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Address" class="control-label"></label>
                <input asp-for="Teacher.Address" class="form-control" />
                <span asp-validation-for="Teacher.Address" class="text-danger"></span>
            </div>
                <div class="form-group" >
            
                <label for="Teacher.Skill" class="control-label"></label>
                  
           
                @foreach (var item in Model.Categories!)
                {
                 <input class="Input-group" type="checkbox" aria-label="Checkbox for text input" name="Teacher.Skills" value="@item.Name">@item.Name
                }
                
                <span asp-validation-for="Teacher.Skills" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary"/>
            </div>
            
            </form>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-page="Index">Tillbaka till l√§rarnas lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

